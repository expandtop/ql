    <TextView
        android:id="@+id/tv_create_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="创建时间："
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_status_value" />

    <TextView
        android:id="@+id/tv_create_time_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_create_time_title"
        app:layout_constraintTop_toTopOf="@id/tv_create_time_title"
        tools:text="2024-05-04 13:19:132024-05-04 13:19:132024-05-04 13:19:132024-05-04 13:19:132024-05-04 13:19:132024-05-04 13:19:132024-05-04 13:19:132024-05-04 13:19:132024-05-04 13:19:132024-05-04 13:19:132024-05-04 13:19:13" />

    <TextView
        android:id="@+id/tv_replay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="最后回复："
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_create_time_value" />

    <TextView
        android:id="@+id/tv_replay_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_replay_title"
